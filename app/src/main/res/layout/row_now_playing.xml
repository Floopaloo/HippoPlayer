<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@drawable/bg_gradient"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/song_album_cover"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:padding="5dp"
        android:src="@color/clouds" />
    <RelativeLayout
        android:id="@+id/info_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3.5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/song_title"
                android:textColor="@color/clouds"
                android:text="" />

            <TextView
                android:id="@+id/song_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/song_description"
                android:textColor="@color/clouds"
                android:text="" />
        </LinearLayout>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/ibtn_previous"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_skip_previous"/>
    <ImageButton
        android:id="@+id/ibtn_play_pause"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_play_arrow"/>
    <ImageButton
        android:id="@+id/ibtn_next"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_skip_next"/>

</LinearLayout>